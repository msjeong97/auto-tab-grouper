{
  "manifest_version": 3,
  "name": "Auto Tab Grouper",
  "version": "1.0.0",
  "description": "Automatically groups browser tabs based on user-defined domain rules.",
  "permissions": ["tabs", "tabGroups", "storage"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
